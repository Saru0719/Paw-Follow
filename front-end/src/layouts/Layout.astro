---
interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--primary: 0, 0, 0; /* Negro */
		--primary-light: 255, 255, 255; /* Blanco */
		--primary-dark: 0, 0, 0; /* Negro */
		--primary-gradient: linear-gradient(
			45deg,
			rgb(var(--primary)),
			rgb(var(--primary-light)) 50%,
			rgb(var(--primary-dark)) 100%
		);
	}

	html {
		font-family: 'Arial', sans-serif;
		background: #ffffff; /* Blanco */
		color: #000000; /* Negro */
	}

	body {
		margin: 0;
		padding: 0;
	}

	code {
		font-family:
			'Courier New',
			Courier,
			Monaco,
			monospace;
		color: #333333; /* Gris oscuro para el texto del c√≥digo */
	}
</style>
