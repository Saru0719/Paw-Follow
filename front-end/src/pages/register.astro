---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Register Page">
  <main class="flex w-full h-screen">
    <section
      class="hidden md:flex flex-1 bg-cover bg-center bg-no-repeat"
      style="background-image: url('https://st.depositphotos.com/1229718/2996/i/450/depositphotos_29969971-stock-photo-pet-group-sign-vertical.jpg');"
    >
    </section>
    <section class="flex-1 bg-white p-8 flex justify-center items-center">
      <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
		<h1 class="text-5xl mb-10 text-gray-900 flex font-extrabold" style="font-family: 'Kavoon', cursive;">
            Paw-Follow
          </h1>
        <form id="register-form" action="http://localhost:3000/register" method="post" class="w-full">
          <label for="name" class="block mb-2 text-gray-600">Name:</label>
          <input type="text" id="name" name="name" required class="w-full p-3 mb-4 border border-gray-300 rounded" />

          <label for="lastname" class="block mb-2 text-gray-600">Lastname:</label>
          <input type="text" id="lastname" name="lastname" required class="w-full p-3 mb-4 border border-gray-300 rounded" />
          
          <label for="email" class="block mb-2 text-gray-600">Email:</label>
          <input type="email" id="email" name="email" required class="w-full p-3 mb-4 border border-gray-300 rounded" />
          
          <label for="password" class="block mb-2 text-gray-600">Password:</label>
          <input type="password" id="password" name="password" required class="w-full p-3 mb-4 border border-gray-300 rounded" />
          
          <label for="cellphone" class="block mb-2 text-gray-600">Cellphone:</label>
          <input type="text" id="cellphone" name="cellphone" required class="w-full p-3 mb-4 border border-gray-300 rounded" />
          
          <button type="submit" class="w-full p-3 bg-black text-white rounded hover:bg-gray-800">Register</button>
        </form>
        <p class="mt-4 text-center">Already have an account? <a href="/" class="text-blue-600 hover:underline">Log in</a></p>
      </div>
    </section>
  </main>
</Layout>