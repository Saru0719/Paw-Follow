---
import Layout from "../layouts/Layout.astro";
import VideoComponent from "../components/VideoComponent";
import { AiOutlineLogout } from "react-icons/ai";
import { BiSolidMessageRoundedError } from "react-icons/bi";
import { GiPawHeart } from "react-icons/gi";
import { HiMiniVideoCamera } from "react-icons/hi2";
import { TbVaccine } from "react-icons/tb";
---

<Layout title="To See">
  <main class="min-h-screen w-full bg-white">
    <nav
      class="fixed bottom-0 w-full text-7xl flex justify-between border-t border-black px-2 py-4 bg-white md:hidden"
    >
      <span>
        <GiPawHeart />
      </span>
      <span>
        <TbVaccine />
      </span>
      <span>
        <HiMiniVideoCamera />
      </span>
      <span>
        <AiOutlineLogout />
      </span>
    </nav>

    <section
      class="min-h-screen w-full flex flex-col items-center md:bg-cover"
    >
      <div class="h-1/4 w-full flex items-center justify-center md:hidden">
        <h1
          class="text-6xl font-semibold bg-white p-2 rounded-md"
          style="font-family: 'Kavoon', cursive;"
        >
          Paw-Follow
        </h1>
      </div>

      <header
        class="w-full px-4 py-8 md:flex justify-center bg-fuchsia-50 border-b border-black hidden"
      >
        <div class="flex justify-center items-center">
          <h1
            class="text-8xl font-semibold"
            style="font-family: 'Kavoon', cursive;"
          >
            Paw-Follow
          </h1>
        </div>
        <div
          class="hidden lg:flex items-center text-6xl justify-center gap-4 fixed right-20"
        >
          <div class="flex flex-col items-center cursor-pointer">
            <BiSolidMessageRoundedError />
            <span class="text-2xl">About Us</span>
          </div>
          <div class="flex flex-col items-center cursor-pointer">
            <AiOutlineLogout />
            <span class="text-2xl">Log Out</span>
          </div>
        </div>
      </header>

      <nav
        class="w-full md:flex justify-center items-center text-7xl gap-20 hidden"
      >
        <span
          class="bg-white rounded-md flex flex-col items-center cursor-pointer"
        >
          <GiPawHeart />
          <span class="text-2xl font-semibold">My Pets</span>
        </span>
        <span
          class="bg-white rounded-md flex flex-col items-center cursor-pointer"
        >
          <TbVaccine />
          <span class="text-2xl font-semibold">Health</span>
        </span>
        <span
          class="bg-white rounded-md flex flex-col items-center cursor-pointer"
