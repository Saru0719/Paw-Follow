---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Home">
    <main class="flex flex-col items-center justify-center w-full h-screen bg-pink-50 p-4">
        <h1 class="text-5xl mb-10 text-gray-900 flex font-extrabold" style="font-family: 'Kavoon', cursive;">
            Paw-Follow
        </h1>
        
        <p class="text-base md:text-lg text-gray-800 mb-6 flex items-center">
            Welcome to Paw-Follow, Sara!
        </p>
        <div class="flex items-center justify-center mb-8">
            <img src="https://cdn-icons-png.flaticon.com/512/21/21545.png" alt="paw icon" class="w-50 h-50 md:w-50 md:h-50 lg:w-85 lg:h-85" />
        </div>

        <p class="text-sm md:text-md text-gray-700 mb-1 text-center">Click and add your pets here</p>
        <button id="show-form-btn" class="flex items-center justify-center w-12 h-12 bg-white rounded-full shadow-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <img src="https://th.bing.com/th/id/OIP.VnmYBIfBDRmEQFOd5IstkgHaHa?rs=1&pid=ImgDetMain" alt="Add Icon" class="w-8 h-8" />
        </button>
        
        <div id="pet-form" class="hidden bg-white p-6 rounded-lg shadow-lg w-full max-w-md mt-6">
            <h1 class="text-xl md:text-2xl font-semibold mb-4 text-gray-900">Add Pet</h1>
            <form id="add-pet-form" action="/submit-pet" method="post" enctype="multipart/form-data">
                <label for="pet-type" class="block text-gray-700 mb-2">Type of Pet:</label>
                <select id="pet-type" name="pet-type" required class="w-full p-3 mb-4 border border-gray-300 rounded-md">
                    <option value="dog">Dog</option>
                    <option value="cat">Cat</option>
                    <option value="hamster">Hamster</option>
                </select>

                <label for="pet-name" class="block text-gray-700 mb-2">Pet Name:</label>
                <input type="text" id="pet-name" name="pet-name" required class="w-full p-3 mb-4 border border-gray-300 rounded-md" />

                <label for="birth-date" class="block text-gray-700 mb-2">Date of Birth:</label>
                <input type="date" id="birth-date" name="birth-date" required class="w-full p-3 mb-4 border border-gray-300 rounded-md" />

                <label for="gender" class="block text-gray-700 mb-2">Gender:</label>
                <div class="flex items-center mb-4">
                    <input type="radio" id="male" name="gender" value="male" class="mr-2" required />
                    <label for="male" class="text-gray-700">Male</label>
                </div>
                <div class="flex items-center mb-4">
                    <input type="radio" id="female" name="gender" value="female" class="mr-2" required />
                    <label for="female" class="text-gray-700">Female</label>
                </div>

                <label for="color" class="block text-gray-700 mb-2">Color:</label>
                <input type="text" id="color" name="color" required class="w-full p-3 mb-4 border border-gray-300 rounded-md" />

                <label for="breed" class="block text-gray-700 mb-2">Breed:</label>
                <input type="text" id="breed" name="breed" required class="w-full p-3 mb-4 border border-gray-300 rounded-md" />

                <label for="size" class="block text-gray-700 mb-2">Size:</label>
                <div class="flex items-center mb-4">
                    <input type="radio" id="small" name="size" value="small" class="mr-2" required />
                    <label for="small" class="text-gray-700">Small</label>
                </div>
                <div class="flex items-center mb-4">
                    <input type="radio" id="medium" name="size" value="medium" class="mr-2" required />
                    <label for="medium" class="text-gray-700">Medium</label>
                </div>
                <div class="flex items-center mb-4">
                    <input type="radio" id="large" name="size" value="large" class="mr-2" required />
                    <label for="large" class="text-gray-700">Large</label>
                </div>

                <label for="pet-image" class="block text-gray-700 mb-2">Pet Image:</label>
                <input type="file" id="pet-image" name="pet-image" accept="image/*" class="w-full p-3 mb-4 border border-gray-300 rounded-md" />

                <button type="submit" class="w-full p-3 bg-black text-white rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                    Add Pet
                </button>
            </form>
        </div>
    </main>

    <script>
        document.getElementById('show-form-btn').addEventListener('click', function() {
            document.getElementById('pet-form').classList.toggle('hidden');
        });
    </script>
</Layout>
