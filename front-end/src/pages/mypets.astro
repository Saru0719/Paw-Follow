---
import Layout from "../layouts/Layout.astro";
import { GiPawHeart } from "react-icons/gi";
import { TbVaccine } from "react-icons/tb";
import { HiMiniVideoCamera } from "react-icons/hi2";
import { AiOutlineLogout } from "react-icons/ai";
import { BiSolidMessageRoundedError } from "react-icons/bi";
import PetsList from "../components/PetsList";
---

<Layout title="My Pets">
  <main class="h-screen w-full bg-white">
    <nav
      class="fixed bottom-0 w-full text-7xl flex justify-between border-t border-black px-2 py-4 bg-white md:hidden"
    >
      <a href="/mypets">
        <span>
          <GiPawHeart />
        </span>
      </a>
      <a href="/health">
        <span>
          <TbVaccine />
        </span>
      </a>
      <a href="/tosee">
        <span>
          <HiMiniVideoCamera />
        </span>
      </a>
      <a href="#">
        <span>
          <AiOutlineLogout />
        </span>
      </a>
    </nav>

    <section
      class="h-screen w-full flex flex-col items-center md:bg-cover"
      style="background-image: url('https://media.istockphoto.com/id/1214700549/es/vector/pata-imprimir-gato-perro-rastro-de-la-mascota-del-cachorro-estilo-plano-vector-de-stock.jpg?s=612x612&w=0&k=20&c=nKqKMaelM5EE7J2PuFrkMQy3r088BRQNMEQ9YCegP-4=');"
    >
      <div class="h-1/4 w-full flex items-start justify-center md:hidden">
        <h1
          class="text-6xl font-semibold p-2 rounded-md w-full text-center bg-white border-b border-black"
          style="font-family: 'Kavoon', cursive;"
        >
          Paw-Follow
        </h1>
      </div>

      <header
        class="w-full px-4 py-8 md:flex justify-between bg-fuchsia-50 border-b border-black hidden"
      >
        <div class="w-1/3"></div>
        <div class="flex justify-center items-center w-1/3">
          <h1
            class="text-5xl lg:text-6xl xl:text-7xl font-semibold"
            style="font-family: 'Kavoon', cursive;"
          >
            Paw-Follow
          </h1>
        </div>
        <div class="hidden md:flex items-center text-4xl justify-end gap-4 w-1/3">
          <div class="flex flex-col items-center cursor-pointer">
            <BiSolidMessageRoundedError />
            <span class="text-2xl">About Us</span>
          </div>
          <div class="flex flex-col items-center cursor-pointer">
            <AiOutlineLogout />
            <span class="text-2xl">Log Out</span>
          </div>
        </div>
      </header>

      <nav
        class="w-full md:flex justify-center items-center text-7xl gap-20 hidden"
      >
        <a href="/mypets">
          <span
            class="bg-white rounded-md flex flex-col items-center cursor-pointer"
          >
            <GiPawHeart />
            <span class="text-2xl font-semibold">My Pets</span>
          </span>
        </a>
        <a href="/health">
          <span
            class="bg-white rounded-md flex flex-col items-center cursor-pointer"
          >
            <TbVaccine />
            <span class="text-2xl font-semibold">Health</span>
          </span>
        </a>
        <a href="/tosee">
          <span
            class="bg-white rounded-md flex flex-col items-center cursor-pointer"
          >
            <HiMiniVideoCamera />
            <span class="text-2xl font-semibold">To see</span>
          </span>
        </a>
      </nav>

      <div
        class="w-full flex flex-wrap items-start justify-center flex-1 h-full p-4 gap-6 md:py-14"
      >
        <PetsList client:load />
      </div>
    </section>
  </main>
</Layout>
